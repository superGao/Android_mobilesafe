<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <!-- 标题栏样式 -->
    <style name="titleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#33ff33</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <!-- 文本样式 -->
    <style name="ContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="btn_next_style">
        <item name="android:onClick">nextPage</item>
        <item name="android:background">@drawable/btn_green_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:text">"下一步"</item>
    </style>

    <style name="btn_prev_style">
        <item name="android:onClick">previousPage</item>
        <item name="android:background">@drawable/btn_green_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:text">"上一步"</item>
    </style>
	
</resources>